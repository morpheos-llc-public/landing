<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Morpheos</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600&family=Nunito:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/blog.css">
</head>
<body>
  <!-- Header -->
  <header>
    <video autoplay muted loop playsinline>
      <source src="/banner/twostrands.mp4" type="video/mp4">
    </video>
    <h1>MORPHEOS INNOVATION</h1>
    <p style="font-size: 1.8em;">AI Adoption & Custom Implementation Consulting</p>
  </header>

  <!-- Navigation -->
  <nav>
    <a href="/" class="nav-logo">MORPHEOS</a>
    <a href="/#method">APPROACH</a>
    <div class="dropdown">
      <a href="/#services" id="servicesLink">SERVICES</a>
      <div class="dropdown-menu" id="servicesDropdown">
        <a href="/#services-ai-strategy">AI Strategy, Governance & Compliance</a>
        <a href="/#services-system-design">System Design & Implementation</a>
        <a href="/#services-biotech">Biotech & Commercialization Expertise</a>
      </div>
    </div>
    <a href="/blog/">BLOG</a>
    <a href="/#about">ABOUT</a>
    <div class="dropdown">
      <a href="#" id="contactLink">CONTACT</a>
      <div class="dropdown-menu" id="contactDropdown">
        <a href="mailto:brandon@morpheos.llc">Email</a>
        <a href="https://www.linkedin.com/in/bhogstad/" target="_blank">LinkedIn</a>
        <a href="https://calendly.com/brandon-hogstad/20-minute-call" target="_blank">Schedule a 20 minute consultation</a>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="menu-toggle">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <div class="mobile-menu">
    <div class="mobile-menu-logo">MORPHEOS</div>
    <a href="/#method">APPROACH</a>
    <div class="mobile-menu-section">
      <a href="/#services" class="mobile-menu-header">SERVICES</a>
      <a href="/#services-ai-strategy" class="mobile-menu-subitem">AI Strategy, Governance & Compliance</a>
      <a href="/#services-system-design" class="mobile-menu-subitem">System Design & Implementation</a>
      <a href="/#services-biotech" class="mobile-menu-subitem">Biotech & Commercialization</a>
    </div>
    <a href="/blog/">BLOG</a>
    <a href="/#about">ABOUT</a>
    <div class="dropdown">
      <a href="#" id="contactLink">CONTACT</a>
      <div class="dropdown-menu" id="contactDropdown">
        <a href="mailto:brandon@morpheos.llc">Email</a>
        <a href="https://www.linkedin.com/in/bhogstad/" target="_blank">LinkedIn</a>
        <a href="https://calendly.com/brandon-hogstad/20-minute-call" target="_blank">Schedule a 20 minute consultation</a>
      </div>
    </div>
  </div>

  <div class="menu-overlay"></div>

  <main>
      {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; <span id="year"></span> MORPHEOS LLC. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    // Dynamically update the year in the footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Dropdown functionality
    const servicesLink = document.getElementById('servicesLink');
    const servicesDropdown = document.getElementById('servicesDropdown');
    const contactLink = document.getElementById('contactLink');
    const contactDropdown = document.getElementById('contactDropdown');

    if (servicesLink) {
        servicesLink.addEventListener('click', (e) => {
          e.preventDefault();
          servicesDropdown.style.display = servicesDropdown.style.display === 'block' ? 'none' : 'block';
          if (contactDropdown) contactDropdown.style.display = 'none';
        });
    }


    if (contactLink) {
        contactLink.addEventListener('click', (e) => {
          e.preventDefault();
          contactDropdown.style.display = contactDropdown.style.display === 'block' ? 'none' : 'block';
          if (servicesDropdown) servicesDropdown.style.display = 'none';
        });
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
        if (servicesLink && !servicesLink.contains(e.target) && servicesDropdown && !servicesDropdown.contains(e.target)) {
            servicesDropdown.style.display = 'none';
        }
        if (contactLink && !contactLink.contains(e.target) && contactDropdown && !contactDropdown.contains(e.target)) {
            contactDropdown.style.display = 'none';
        }
    });

    // Logo fade-in on scroll
    const navLogo = document.querySelector('.nav-logo');
    const header = document.querySelector('header');
    if (navLogo && header) {
        const headerHeight = header.offsetHeight;

        window.addEventListener('scroll', () => {
            if (window.scrollY > headerHeight) {
                navLogo.classList.add('visible');
            } else {
                navLogo.classList.remove('visible');
            }
        });
    }


    // Mobile menu functionality
    const menuToggle = document.querySelector('.menu-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuOverlay = document.querySelector('.menu-overlay');

    if (menuToggle && mobileMenu && menuOverlay) {
        menuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('active');
          menuOverlay.classList.toggle('active');
          document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
        });

        menuOverlay.addEventListener('click', () => {
          mobileMenu.classList.remove('active');
          menuOverlay.classList.remove('active');
          document.body.style.overflow = '';
        });

        // Close menu when clicking a link
        mobileMenu.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.classList.remove('active');
            menuOverlay.classList.remove('active');
            document.body.style.overflow = '';
          });
        });
    }
  </script>
</body>
</html>
